option version = "0.2.0";
import "vnet/interface_types.api";
import "vnet/fib/fib_types.api";

/** \brief Add or update a session redirection
    @param client_index - opaque cookie to identify the sender
    @param context - sender context, to match reply w/ request
    @param table_index - classifier table index
    @param match_len - classifier session match length in bytes (max is 80-bytes)
    @param match - classifier session match
    @param is_punt - true = punted traffic, false = forwarded traffic
    @param n_paths - number of paths
    @param paths - the paths of the redirect
*/

define ip_session_redirect_add
{
  u32 client_index;
  u32 context;

  u32 session_index [default=0xffffffff];
  u32 table_index;
  u8 match_len;
  u8 match[80];
  bool is_punt;
  u8 n_paths;
  vl_api_fib_path_t paths[n_paths];

  option vat_help = "session-index <index> table <index> match <match> via <path>";
  option status="in_progress";
};

/** \brief
    @param context - sender context, to match reply w/ request
    @param retval - return value for request
    @param session_index - session index for the new session
*/

define ip_session_redirect_add_reply
{
  u32 context;
  i32 retval;
  u32 session_index;
};

/** \brief Delete a session redirection
    @param client_index - opaque cookie to identify the sender
    @param context - sender context, to match reply w/ request
    @param session_index (optional) - remove the corresponding session (optional)
    @param table_index (optional) - classifier table index
    @param match_len (optional) - classifier session match length in bytes (max is 80-bytes)
    @param match (optional) - classifier session match
*/

autoreply define ip_session_redirect_del
{
  u32 client_index;
  u32 context;

  u32 session_index [default=0xffffffff];
  u32 table_index [default=0xffffffff];
  u8 match_len [default=0];
  u8 match[match_len];

  option vat_help = "session-index <index> table <index> match <match>";
  option status="in_progress";
};

