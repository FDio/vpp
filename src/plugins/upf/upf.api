/* Define a simple enable-disable binary API to control the feature */

define upf_enable_disable {
    /* Client identifier, set from api_main.my_client_index */
    u32 client_index;

    /* Arbitrary context, so client can match reply to request */
    u32 context;

    /* Enable / disable the feature */
    u8 enable_disable;

    /* Interface handle */
    u32 sw_if_index;
};

define upf_enable_disable_reply {
    /* From the request */
    u32 context;

    /* Return value, zero means all OK */
    i32 retval;
};

autoreply define upf_app_add_del {
  u32 client_index;
  u32 context;

  u8 name[64];
  u32 flags;
  u8 is_add;
};

autoreply define upf_app_ip_rule_add_del {
  u32 client_index;
  u32 context;

  u8 app[64];
  u32 id;
  u8 is_ipv6;
  u8 src_ip_addr[16];
  u8 src_ip_prefix_len;
  u8 dst_ip_addr[16];
  u8 dst_ip_prefix_len;
  u8 is_add;
};

autoreply define upf_app_l7_rule_add_del {
  u32 client_index;
  u32 context;

  u8 app[64];
  u32 id;
  u8 protocol;
  u8 host[256];
  u8 path[256];
  u8 is_add;
};

autoreply define upf_app_flow_timeout_set {
  u32 client_index;
  u32 context;

  u8 type;
  u16 default_value;
};
