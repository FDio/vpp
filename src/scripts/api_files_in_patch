# Bail out if not in a git tree
git rev-parse 2> /dev/null
if [ $? != 0 ] ; then
    exit 0
fi

# ... or dependencies not met
which git egrep awk >/dev/null
if [ $? != 0 ] ; then
    exit 1
fi

# ... or if the output file is not specified in $1
outfile=$1 
[ -n "$outfile" ] || exit 1
rm -f $outfile

# Retrieve list of api files in the patch at HEAD,
# do nothing if there are none.
api_files=$(git show --stat | egrep -e 'src/.+\.api\>' | awk -e '{ print $1}')
if [ "$api_files" = "" ] ; then
    exit 0
fi

# Generate the api changes file
outdir=$(dirname $outfile)
mkdir -p $outdir || exit 1
for apifile in $api_files ; do
    echo $apifile >>$outfile
done

# Echo output file name for build system use
echo $outfile

