option version = "1.0.0";

import "vnet/match/match_types.api";

typedef match_set
{
  vl_api_match_type_t ms_type;
  vl_api_match_orientation_t ms_orientation;
  vl_api_ether_type_t ms_ether_type;
  string ms_tag[];
};

define match_set_add
{
  u32 client_index;
  u32 context;
  vl_api_match_set_t set;
};

define match_set_add_reply
{
  u32 context;
  i32 retval;
  u32 match_set_index;
};

autoreply define match_set_delete
{
  u32 client_index;
  u32 context;
  u32 match_set_index;
};

define match_set_list_update
{
  u32 client_index;
  u32 context;
  u32 match_set_index;
  u32 match_list_index;
  u32 priority;
  vl_api_match_list_t list;
};

define match_set_list_update_reply
{
  u32 context;
  i32 retval;
  u32 match_list_index;
};

autoreply define match_set_list_delete
{
  u32 client_index;
  u32 context;
  u32 match_set_index;
  u32 match_list_index;
};

define match_set_dump
{
  u32 client_index;
  u32 context;
};

define match_set_details
{
  u32 context;
};

