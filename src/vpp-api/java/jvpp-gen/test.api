python ~/vpp/src/tools/vppapigen/vppapigen.py --input test.api --pluginpath ~/vpp/src/tools/vppapigen/ --output test.api.json JSON

  i8 val_i8;
  u16 val_u16;
  i16 val_i16;
  u8 val_u8;
  u8 val_u8;
*/

define control_ping
{
  u32 client_index;
  u32 context;
};

define control_ping_reply
{
  u32 context;
  i32 retval;
  u32 client_index;
  u32 vpe_pid;
};

