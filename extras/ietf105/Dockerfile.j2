
FROM ubuntu:18.04

RUN set -eux; \
    apt-get update; \
    apt-get install -y --no-install-recommends \
    inetutils-traceroute \
    ca-certificates \
    build-essential \
    git gdb sudo \
    iputils-ping \
    net-tools \
    iproute2 \
    tcpdump \
    python3-cffi \
    netcat; \
    rm -rf /var/lib/apt/lists/*; \
    mv /usr/sbin/tcpdump /usr/bin/tcpdump

RUN set -eux; \
    mkdir -p {{vpp_path}}

COPY . / {{vpp_path}}/

WORKDIR {{vpp_path}}

RUN set -eux; \
    make wipe

RUN set -eux; \
    export UNATTENDED=y; \
    make install-dep; \
    rm -rf /var/lib/apt/lists/*

RUN set -eux; \
    export UNATTENDED=y; \
    make build; \
    make pkg-deb; \
    rm -rf .ccache; \
    find . -type f -name '*.o' -delete

WORKDIR {{vpp_path}}/build-root

RUN set -eux; \
    rm vpp-api-python_*.deb; \
    dpkg -i *.deb

RUN set -euex; \
    cp {{vpp_path}}/startup.conf /etc/startup.conf; \
    rm -rf {{vpp_path}}

WORKDIR /
 
CMD vpp -c /etc/startup.conf

