
FROM ubuntu:18.04

ARG VPP_PATH={{vpp_path}}

RUN set -eux; \
    apt-get update; \
    apt-get install -y --no-install-recommends \
    inetutils-traceroute \
    ca-certificates \
    build-essential \
    git gdb sudo \
    iputils-ping \
    net-tools \
    iproute2 \
    tcpdump \
    netcat; \
    rm -rf /var/lib/apt/lists/*; \
    mv /usr/sbin/tcpdump /usr/bin/tcpdump

RUN set -eux; \
    mkdir -p $VPP_PATH

COPY . / $VPP_PATH/

WORKDIR $VPP_PATH

RUN set -eux; \
    make wipe

RUN set -eux; \
    export UNATTENDED=y; \
    make install-dep; \
    rm -rf /var/lib/apt/lists/*

RUN set -eux; \
    export UNATTENDED=y; \
    make build; \
    make pkg-deb; \
    rm -rf .ccache; \
    find . -type f -name '*.o' -exec rm -rf '{}' \;

WORKDIR $VPP_PATH/build-root

RUN set -eux; \
    rm vpp-api-python_*.deb; \
    dpkg -i *.deb

WORKDIR /usr/share/vpp/plugins/perfmon

RUN tar Jxf PerfmonTables.tar.xz
 
CMD vpp -c $VPP_PATH/startup.conf

